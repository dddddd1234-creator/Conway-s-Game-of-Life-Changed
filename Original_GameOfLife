int getcount(int x,int y) {
    int ret=0;
    if (x>0&&y>0)ret+=map1[x-1][y-1];
    if (y>0)ret+=map1[x][y-1];
    if (x<29&&y>0)ret+=map1[x+1][y-1];
    if (x>0)ret+=map1[x-1][y];
    if (x<29)ret+=map1[x+1][y];
    if (x>0&&y<29)ret+=map1[x-1][y+1];
    if (y<29)ret+=map1[x][y+1];
    if (x<29&&y<29)ret+=map1[x+1][y+1];
    return ret;
}
void makechange() {
    for(int i=0;i<30;i++) {
        for(int j=0;j<30;j++) {
            int next = getcount(i,j);
            if (map1[i][j]==1) {//is alive
                if (next==2 || next==3)mapclone[i][j]=1;
                else mapclone[i][j]=0;
            }
            else {//is dead
                if (next == 3)mapclone[i][j]=1;
                else mapclone[i][j]=0;
            }
        }
    }
    for(int i=0;i<30;i++) {
        for(int j=0;j<30;j++) {
            map1[i][j] = mapclone[i][j];
        }
    }
}
int main() {
    system("mode con cols=60 lines=32");
    for(int i=0;i<30;i++) {
        for(int j=0;j<30;j++) {
            cout << map1[i][j] << " ";
        }
        cout << "\n";
    }
    cout << endl;
    while(1){
        makechange();
        system("cls");
        for(int i=0;i<30;i++) {
            for(int j=0;j<30;j++) {
                cout << map1[i][j] << " ";
            }
            cout << "\n";
        }
        Sleep(1000);//change every 1 second
    }
}
